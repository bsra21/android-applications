<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetayActivity"
    android:backgroundTint="#40FFFFFF"
    android:backgroundTintMode="src_over"
    android:background="@drawable/book">

    <ImageView
        android:id="@+id/detayImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/seekbarPlay"
        android:backgroundTintMode="src_over"
        android:padding="10dp"
        android:layout_margin="30dp"/>

    <SeekBar
        android:id="@+id/seekbarPlay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textBas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textStyle="bold"
        android:layout_below="@+id/seekbarPlay"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textStyle="bold"
        android:layout_below="@+id/seekbarPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/seekbarPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/play"/>
    <!-- android:layout_below="@+id/playButton"-->
    <Button
        android:id="@+id/favoriButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="165dp"
        android:background="@drawable/ekle" />
    <!--
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>-->
</RelativeLayout>